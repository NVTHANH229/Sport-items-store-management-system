


<div class="container mx-auto px-4">
  <div class="flex items-center justify-between flex-wrap mb-6">
    <h1 class="text-3xl font-bold text-red-500">Brands</h1>

    <%= link_to new_brand_path, class: button_class(theme: "primary") do %>
    Add New Brand
    <% end %>
  </div>

<table class="table-auto border-collapse border-black w-full">
  <thead class="bg-red-600 bg-red-600">
      <tr>
        
                  <th class="border-2 border-black dark:border-black font-semibold p-4 text-white text-left">Brand name</th>
                  <th class="border-2 border-black dark:border-black font-semibold p-4 text-white text-left">Country</th>
                
          <th class="border-2 border-black dark:border-black font-semibold p-4 text-white text-left"></th>
        
      </tr>
    </thead>

    <tbody>
      <% @brands.each do |brand| %>
      <%= content_tag :tr, id: dom_id(brand), class: dom_class(brand) do %>
      

              <td class="border-2 border-black dark:border-black p-4 text-black text-left"><%= brand.brand_name %></td>
              <td class="border-2 border-black dark:border-black p-4 text-black text-left"><%= brand.country %></td>
      
      
        <td class="border-2 border-black dark:border-black p-4 text-black text-left"><%= link_to 'Show', brand %></td>
      
      <% end %>
      <% end %>
    </tbody>
  </table>
</div>
</div>
