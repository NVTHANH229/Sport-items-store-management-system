


<div class="container mx-auto px-4">
  <div class="flex items-center justify-between flex-wrap mb-6">
    <h1 class="text-3xl font-bold text-red-500">Categories</h1>

    <%= link_to new_category_path, class: button_class(theme: "primary") do %>
    Add New Category
    <% end %>
  </div>

 <table class="table-auto border-collapse border-black w-full">
  <thead class="bg-red-600 bg-red-600">
      <tr>
        
          <th class="border-2 border-black dark:border-black font-semibold p-4 text-white text-left">Name</th>
        
                  <th class="border-2 border-black dark:border-black font-semibold p-4 text-white text-left">Type of sport</th>
                 <th class="border-2 border-black dark:border-black font-semibold p-4 text-white text-left"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
      <%= content_tag :tr, id: dom_id(category), class: dom_class(category) do %>
      
        <td class="border-2 border-black dark:border-black p-4 text-black text-left"><%= link_to category.name, category %></td>
      

              <td class="border-2 border-black dark:border-black p-4 text-black text-left"><%= category.type_of_sport %></td>
              <td class="border-2 border-black dark:border-black p-4 text-black text-left"><%= link_to 'Show', category %></td>
      
      
      <% end %>
      <% end %>
    </tbody>
  </table>
</div>
</div>
